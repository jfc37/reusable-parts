{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "types": [],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@reusable-parts/*": ["libs/*"],
      "@reusable-parts/fuse": ["libs/fuse/index.ts"],
      "@reusable-parts/stateless/components/loader": ["libs/stateless/components/loader/src/index.ts"],
      "@reusable-parts/stateless/components/sidebar": ["libs/stateless/components/sidebar/src/index.ts"],
      "@reusable-parts/stateless/theme": ["libs/stateless/theme/src/index.ts"],
      "@reusable-parts/stateless/layouts/header": ["libs/stateless/layouts/header/src/index.ts"],
      "@reusable-parts/stateless/layouts/page": ["libs/stateless/layouts/page/src/index.ts"],
      "@reusable-parts/stateless/layouts/page-with-nav": ["libs/stateless/layouts/page-with-nav/src/index.ts"],
      "@reusable-parts/stateless/pages/login": ["libs/stateless/pages/login/src/index.ts"],
      "@reusable-parts/stateless/pages/register": ["libs/stateless/pages/register/src/index.ts"],
      "@reusable-parts/stateless/pages/forgot-password": ["libs/stateless/pages/forgot-password/src/index.ts"],
      "@reusable-parts/containers/pages/chat": ["libs/containers/pages/chat/src/index.ts"],
      "@reusable-parts/logic/integration/auth0": ["libs/logic/integration/auth0/src/index.ts"],
      "@reusable-parts/stateless/components/hero-text": ["libs/stateless/components/hero-text/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
